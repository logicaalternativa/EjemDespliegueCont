		<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <configuration>
                	<target>
                		<ant antfile="deployTomcat.xml" inheritrefs="true" inheritAll="true">
                			<property name="project.build.finalName" value="${project.build.finalName}"/>
                		</ant>
	                 </target>                     
                </configuration>
                <dependencies>
                    <dependency>
				    <groupId>org.apache.tomcat</groupId>
				    <artifactId>tomcat-catalina-ant</artifactId>
				    <version>7.0.42</version>
					</dependency>
	            </dependencies>
                <executions>
                	<execution>
	                     <id>install-tomcat</id>
	                     <phase>install</phase>
	                     <goals>
	                             <goal>run</goal>
	                     </goals>
                   	</execution>
        		</executions>
        </plugin>
	</plugins>    
  </build>
